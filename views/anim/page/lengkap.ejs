<div class="container-fluid h-100 d-flex justify-content-center mt-3">
    <div class="card bxsd" style="width: 95%;">
        <center>
            <h1 class="text-center"><%= data.judul %></h1>
            <img src=<%= data.img %> class="card-img-top mt-4 shadowbor" alt="gambar rusak" style="width: 250px;">
        </center>  
        <div class="card-body"> 
           <% data.link.forEach(res =>{%>
            <div class="card martop align-items-center mt-4">
                <% if(res.ep[0].jud.includes("Episode")){%>
                    <h3>Full Episode</h3> 
                    <%} else if(res.ep[0].jud.includes("Batch")){%>
                        <h3 class="mt-3">Batch</h3>
                        <%}%> 
              <% res.ep.forEach(dat =>{%>
                    <h5 class="bgrtxt defined text-center" style="width: 90%; font-size: 20px"><%= dat.jud%></h3>
                            <% dat.cont.forEach(lk =>{%>
                                 <h5 class="bgrtxt text-center defined" style="width: 50%; background-color: #1c5c34; font-size: 15px;"><%= lk.kualitas %> (<%= lk.size  %>)</h5>    
                                 <div class="row">
                                    <% lk.link.forEach(x =>{%>
                                        <a href=<%= "/kartun/"+x.link %>  class="btn btn-outline-primary mt-2"><%= x.via %></a>
                                        <%}) %> 
                                 </div>  
                            <%}) %>  
            <%}) %> 
            </div>
            <%}) %> 
        </div>
    </div>
  </div>